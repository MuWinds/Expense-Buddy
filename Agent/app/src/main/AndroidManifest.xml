<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Agent"
        tools:targetApi="31">

        <!-- 应用主入口 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddTransaction.AddTransactionActivity" android:exported="false" />
        <activity android:name=".ui.TransactionList.TransactionListActivity" android:exported="false" />


        <service
            android:name=".ui.FloatingWindow.FloatingWindowService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name=".ui.FloatingWindow.PetService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />


        <activity
            android:name=".ui.FloatingWindow.ScreenCapturePermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />


        <service
            android:name=".ui.FloatingWindow.OcrForegroundService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

    </application>

</manifest>
